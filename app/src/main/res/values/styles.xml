<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewActivityMainStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/text_view_main_activity_text_size</item>
        <item name="android:layout_marginTop">@dimen/text_view_main_activity_margin_top</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecyclerViewMainActivityStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_marginTop">@dimen/recycler_view_main_activity_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/recycler_view_main_activity_margin_bottom</item>
    </style>

    <style name="TextViewItemRecyclerViewStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_view_item_recycler_view_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/text_view_item_recycler_view_margin_end</item>
    </style>
</resources>
